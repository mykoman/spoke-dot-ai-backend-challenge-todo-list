{
	"extends": ["prettier", "plugin:node/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "warn",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off"
	},

	"overrides": [
		{
			"files": "*.test.js",
			"rules": {
				"node/no-unpublished-require": 0,
				"node/no-missing-require": 0
			}
		}
	],

	"parserOptions": {
		"ecmaVersion": 2020
	}
}
